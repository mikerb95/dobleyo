---
import Layout from "../layouts/Layout.astro";
import RoastLotSelector from "../components/RoastLotSelector.jsx";
import RoastForm from "../components/RoastForm.jsx";
---

<Layout title="Tostar Café | DobleYo">
  <div class="tostar-container">
    <h1>Tostar Café</h1>
    <p class="subtitle">Selecciona un lote verde y la cantidad a tostar</p>

    <div class="content">
      <RoastLotSelector client:load />
      <RoastForm client:load />
    </div>
  </div>
</Layout>

<style>
  .tostar-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
    min-height: 80vh;
  }

  h1 {
    text-align: center;
    color: #2c1810;
    margin-bottom: 1rem;
    font-size: 3rem;
    font-weight: 800;
    letter-spacing: -0.02em;
  }

  .subtitle {
    text-align: center;
    color: #6b5635;
    margin-bottom: 4rem;
    font-size: 1.2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .content {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  @media (max-width: 900px) {
    .content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    h1 {
      font-size: 2.5rem;
    }
  }
</style>
