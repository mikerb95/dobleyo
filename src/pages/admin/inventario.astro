          <td>
            <span class="category-badge ${categoryClass}">${p.category}</span>
          </td>
          <td class="text-right">${formatCurrency(p.price)}</td>
          <td class="text-right">
            <span class="stock-badge ${stockClass}">${p.stock_quantity}</span>
          </td>
