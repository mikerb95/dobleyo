---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section class="card" style="max-width:440px; margin:2rem auto 0">
    <div class="p">
      <h1>Iniciar sesión</h1>
      <p class="muted" style="margin-top:-.4rem">
        Accede para ver tu cuenta y pedidos.
      </p>
      <form
        id="loginForm"
        class="form"
        onsubmit="return false"
        style="display:grid; gap:.75rem; margin-top:.75rem"
      >
        <label
          >Correo<input
            id="loginEmail"
            type="email"
            placeholder="tu@correo.com"
            required
          /></label
        >
        <label
          >Contraseña<input
            id="loginPass"
            type="password"
            placeholder="••••••••"
            required
          /></label
        >
        <button class="btn" id="loginBtn" type="submit">Entrar</button>
      </form>
      <div
        id="loginError"
        class="muted"
        style="color:#b91c1c; display:none; margin-top:.35rem"
      >
      </div>
      <p style="text-align:center; margin-top:1rem; font-size:0.9rem">
        ¿No tienes cuenta? <a href="/registro" style="color:#c67b4e"
          >Crear cuenta</a
        >
      </p>
    </div>
  </section>

  <script>
    // Login real conectado al backend
    (function () {
      const f = document.getElementById("loginForm");
      const err = document.getElementById("loginError");
      const btn = document.getElementById("loginBtn");

      f.addEventListener("submit", async function () {
        const email = (
          document.getElementById("loginEmail").value || ""
        ).trim();
        const password = (
          document.getElementById("loginPass").value || ""
        ).trim();

        if (!email || !password) {
          showError("Completa todos los campos.");
          return;
        }

        // UI Loading state
        btn.disabled = true;
        btn.textContent = "Entrando...";
        err.style.display = "none";

        try {
          const res = await fetch("/api/auth/login", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            credentials: "include",
            body: JSON.stringify({ email, password }),
          });

          const data = await res.json();

          if (!res.ok) {
            throw new Error(data.error || "Error al iniciar sesión");
          }

          // Guardar token en localStorage para uso en paneles protegidos
          if (data.token) {
            localStorage.setItem("adminToken", data.token);
          }
          
          // Guardar nombre del usuario para mostrar en navbar
          if (data.user?.name) {
            const firstName = data.user.name.split(" ")[0];
            localStorage.setItem("userName", firstName);
          }

          // Obtener parámetro de redirección
          const urlParams = new URLSearchParams(window.location.search);
          const redirect = urlParams.get("redirect");

          // Redireccionar según rol y origen
          const role = data.user?.role;

          if (redirect) {
            // Si hay redirect específico, validar acceso según rol
            if (redirect.startsWith("/app")) {
              // /app solo para caficultor y admin
              if (role === "caficultor" || role === "admin") {
                window.location.href = redirect;
              } else {
                showError("No tienes permisos para acceder a esa sección.");
                btn.disabled = false;
                btn.textContent = "Entrar";
                return;
              }
            } else if (
              redirect.startsWith("/admin") ||
              redirect.includes("admin.html")
            ) {
              // /admin y /admin.html solo para admin
              if (role === "admin") {
                window.location.href = redirect;
              } else {
                showError("Solo administradores pueden acceder a esa sección.");
                btn.disabled = false;
                btn.textContent = "Entrar";
                return;
              }
            } else {
              window.location.href = redirect;
            }
          } else {
            // Sin redirect: ir según rol
            if (role === "admin" || role === "caficultor") {
              window.location.href = "/app";
            } else {
              window.location.href = "/cuenta";
            }
          }
        } catch (e) {
          showError(e.message);
          btn.disabled = false;
          btn.textContent = "Entrar";
        }
      });

      function showError(msg) {
        err.textContent = msg;
        err.style.display = "block";
      }
    })();
  </script>
</Layout>
