---
import MobileLayout from "../../layouts/MobileLayout.astro";
---

<MobileLayout
  title="Almacenar en Inventario"
  description="Registra el caf√© verde en el inventario f√≠sico con peso y ubicaci√≥n"
>
  <form id="inventoryForm">
    <!-- Selecci√≥n de Lote -->
    <div class="form-group">
      <label for="lotSelect">Lote de Caf√© <span class="required">*</span></label
      >
      <select id="lotSelect" name="lot" required>
        <option value="">Selecciona un lote...</option>
      </select>
      <div class="form-hint">Lotes disponibles sin almacenar</div>
    </div>

    <!-- Info del Lote Seleccionado -->
    <div class="card" id="lotInfoCard" style="display: none;">
      <h3>Informaci√≥n del Lote</h3>
      <div
        style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; font-size: 0.95rem;"
      >
        <div>
          <div style="color: #666; font-size: 0.85rem;">Variedad</div>
          <div style="font-weight: 600;" id="lotVariety">‚Äî</div>
        </div>
        <div>
          <div style="color: #666; font-size: 0.85rem;">Proceso</div>
          <div style="font-weight: 600;" id="lotProcess">‚Äî</div>
        </div>
        <div>
          <div style="color: #666; font-size: 0.85rem;">Finca</div>
          <div style="font-weight: 600;" id="lotFarm">‚Äî</div>
        </div>
        <div>
          <div style="color: #666; font-size: 0.85rem;">Recolectado</div>
          <div style="font-weight: 600;" id="lotDate">‚Äî</div>
        </div>
      </div>
    </div>

    <!-- Peso Neto -->
    <div class="form-group">
      <label for="weight"
        >Peso Neto de Caf√© Verde <span class="required">*</span></label
      >
      <div style="display: flex; gap: 0.5rem;">
        <input
          type="number"
          id="weight"
          name="weight"
          placeholder="Ej: 45.5"
          step="0.1"
          min="0"
          required
          style="flex: 1;"
        />
        <select style="width: 80px;" id="weightUnit" name="weightUnit">
          <option value="kg">kg</option>
          <option value="lb">lb</option>
        </select>
      </div>
      <div class="form-hint">Peso total del caf√© verde para este lote</div>
    </div>

    <!-- Ubicaci√≥n de Almacenamiento -->
    <div class="form-group">
      <label for="location"
        >Ubicaci√≥n en Bodega <span class="required">*</span></label
      >
      <select id="location" name="location" required>
        <option value="">Selecciona una ubicaci√≥n</option>
        <option value="A-01">Secci√≥n A - Estante 01</option>
        <option value="A-02">Secci√≥n A - Estante 02</option>
        <option value="B-01">Secci√≥n B - Estante 01</option>
        <option value="B-02">Secci√≥n B - Estante 02</option>
        <option value="C-01"
          >Secci√≥n C - Estante 01 (Temperatura controlada)</option
        >
        <option value="C-02"
          >Secci√≥n C - Estante 02 (Temperatura controlada)</option
        >
      </select>
      <div class="form-hint">Elige la ubicaci√≥n f√≠sica de almacenamiento</div>
    </div>

    <!-- Fecha de Almacenamiento -->
    <div class="form-group">
      <label for="storageDate">Fecha de Almacenamiento</label>
      <input type="date" id="storageDate" name="storageDate" disabled />
      <div class="form-hint">
        Se registra autom√°ticamente como la fecha actual
      </div>
    </div>

    <!-- Notas Adicionales -->
    <div class="form-group">
      <label for="notes">Notas (Opcional)</label>
      <textarea
        id="notes"
        name="notes"
        placeholder="Ej: Empaques en buen estado, sin da√±o aparente..."
      ></textarea>
    </div>

    <!-- Resumen -->
    <div class="info-box" id="summaryBox" style="display: none;">
      <strong>Resumen del Almacenamiento:</strong>
      <div style="margin-top: 0.75rem; font-size: 0.95rem; line-height: 1.6;">
        <div>
          üì¶ Lote: <span id="summaryLot" style="font-weight: 600;">‚Äî</span>
        </div>
        <div>
          ‚öñÔ∏è Peso: <span id="summaryWeight" style="font-weight: 600;">‚Äî</span>
        </div>
        <div>
          üìç Ubicaci√≥n: <span id="summaryLocation" style="font-weight: 600;"
            >‚Äî</span>
        </div>
        <div>
          üìÖ Fecha: <span id="summaryDate" style="font-weight: 600;">‚Äî</span>
        </div>
      </div>
    </div>

    <!-- Botones de Acci√≥n -->
    <div class="form-actions" style="margin-bottom: 2rem;">
      <button type="reset" class="btn-secondary">Limpiar</button>
      <button type="submit" class="btn-primary">Almacenar Lote</button>
    </div>
  </form>

  <script>
    const lotSelect = document.getElementById("lotSelect");
    const storageDate = document.getElementById("storageDate");
    const form = document.getElementById("inventoryForm");
    const summaryBox = document.getElementById("summaryBox");
    const lotInfoCard = document.getElementById("lotInfoCard");

    // Cargar lotes disponibles
    function loadAvailableLots() {
      const harvests = JSON.parse(localStorage.getItem("harvests") || "[]");
      const stored = JSON.parse(localStorage.getItem("inventory") || "[]");
      const storedLotIds = stored.map((item) => item.lotId);

      const available = harvests.filter((h) => !storedLotIds.includes(h.lotId));

      lotSelect.innerHTML = '<option value="">Selecciona un lote...</option>';
      available.forEach((harvest) => {
        const option = document.createElement("option");
        option.value = JSON.stringify(harvest);
        option.textContent = `${harvest.lotId} (${harvest.variety})`;
        lotSelect.appendChild(option);
      });
    }

    // Establecer fecha actual
    const today = new Date().toISOString().split("T")[0];
    storageDate.value = today;

    // Actualizar informaci√≥n del lote seleccionado
    lotSelect.addEventListener("change", () => {
      if (!lotSelect.value) {
        lotInfoCard.style.display = "none";
        summaryBox.style.display = "none";
        return;
      }

      const harvest = JSON.parse(lotSelect.value);
      document.getElementById("lotVariety").textContent = harvest.variety;
      document.getElementById("lotProcess").textContent = harvest.process;
      document.getElementById("lotFarm").textContent = harvest.farm;
      document.getElementById("lotDate").textContent = new Date(
        harvest.timestamp
      ).toLocaleDateString("es-CO");
      lotInfoCard.style.display = "block";
      updateSummary();
    });

    // Actualizar resumen
    function updateSummary() {
      const weight = document.getElementById("weight").value;
      const unit = document.getElementById("weightUnit").value;
      const location = document.getElementById("location").value;

      if (weight && location && lotSelect.value) {
        const harvest = JSON.parse(lotSelect.value);
        document.getElementById("summaryLot").textContent = harvest.lotId;
        document.getElementById("summaryWeight").textContent =
          `${weight} ${unit}`;
        document.getElementById("summaryLocation").textContent = location;
        document.getElementById("summaryDate").textContent = new Date(
          storageDate.value
        ).toLocaleDateString("es-CO");
        summaryBox.style.display = "block";
      } else {
        summaryBox.style.display = "none";
      }
    }

    document.getElementById("weight").addEventListener("input", updateSummary);
    document
      .getElementById("weightUnit")
      .addEventListener("change", updateSummary);
    document
      .getElementById("location")
      .addEventListener("change", updateSummary);

    // Enviar formulario
    form.addEventListener("submit", (e) => {
      e.preventDefault();

      if (!lotSelect.value) {
        alert("‚ö†Ô∏è Debes seleccionar un lote");
        return;
      }

      const harvest = JSON.parse(lotSelect.value);
      const storageRecord = {
        lotId: harvest.lotId,
        weight: parseFloat(document.getElementById("weight").value),
        weightUnit: document.getElementById("weightUnit").value,
        location: document.getElementById("location").value,
        storageDate: storageDate.value,
        notes: document.getElementById("notes").value,
        type: "green_coffee",
        storedAt: new Date().toISOString(),
        harvest: harvest,
      };

      // Guardar en localStorage
      const inventory = JSON.parse(localStorage.getItem("inventory") || "[]");
      inventory.push(storageRecord);
      localStorage.setItem("inventory", JSON.stringify(inventory));

      alert(
        `‚úÖ Lote ${storageRecord.lotId} almacenado correctamente\n${storageRecord.weight} ${storageRecord.weightUnit} en ${storageRecord.location}`
      );

      form.reset();
      storageDate.value = today;
      lotInfoCard.style.display = "none";
      summaryBox.style.display = "none";
      loadAvailableLots();
    });

    // Cargar lotes al iniciar
    loadAvailableLots();
  </script>
</MobileLayout>
