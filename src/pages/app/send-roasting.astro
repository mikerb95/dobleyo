---
import MobileLayout from "../../layouts/MobileLayout.astro";
---

<MobileLayout
  title="Enviar a Tosti√≥n"
  description="Selecciona caf√© verde del inventario para llevar a proceso de tosti√≥n"
>
  <form id="roastingForm">
    <!-- Selecci√≥n de Lote -->
    <div class="form-group">
      <label for="lotSelect"
        >Lote de Caf√© Verde <span class="required">*</span></label
      >
      <select id="lotSelect" name="lot" required>
        <option value="">Selecciona un lote...</option>
      </select>
      <div class="form-hint">Solo muestra lotes sin procesar</div>
    </div>

    <!-- Info del Lote Seleccionado -->
    <div class="card" id="lotInfoCard" style="display: none;">
      <h3>Informaci√≥n del Lote</h3>
      <div
        style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; font-size: 0.95rem;"
      >
        <div>
          <div style="color: #666; font-size: 0.85rem;">Lote ID</div>
          <div style="font-weight: 600;" id="lotId">‚Äî</div>
        </div>
        <div>
          <div style="color: #666; font-size: 0.85rem;">Variedad</div>
          <div style="font-weight: 600;" id="lotVariety">‚Äî</div>
        </div>
        <div>
          <div style="color: #666; font-size: 0.85rem;">Peso Disponible</div>
          <div
            style="font-weight: 600; color: #c67b4e;"
            id="lotAvailableWeight"
          >
            ‚Äî
          </div>
        </div>
        <div>
          <div style="color: #666; font-size: 0.85rem;">Ubicaci√≥n Actual</div>
          <div style="font-weight: 600;" id="lotLocation">‚Äî</div>
        </div>
      </div>
    </div>

    <!-- Selecci√≥n de Cantidad -->
    <div class="form-group">
      <label for="quantity"
        >Cantidad para Tosti√≥n <span class="required">*</span></label
      >
      <div style="display: flex; gap: 0.5rem;">
        <input
          type="number"
          id="quantity"
          name="quantity"
          placeholder="Ej: 25"
          step="0.1"
          min="0"
          required
          style="flex: 1;"
        />
        <div
          id="unit"
          style="display: flex; align-items: center; padding: 0 0.75rem; background: #f5f5f5; border-radius: 0.375rem; border: 1px solid #e6e6e6; min-width: 60px;"
        >
          kg
        </div>
      </div>
      <div class="form-hint" id="quantityHint">M√°ximo disponible: ‚Äî</div>
    </div>

    <!-- Opci√≥n: Parcial o Todo -->
    <div class="info-box">
      <strong>üí° Nota:</strong> Puedes enviar solo una parte del lote y el resto permanecer√°
      en inventario. Si env√≠as todo, el lote se marcar√° como procesado.
    </div>

    <!-- Fecha de Env√≠o -->
    <div class="form-group">
      <label for="roastingDate">Fecha de Env√≠o a Tosti√≥n</label>
      <input type="date" id="roastingDate" name="roastingDate" disabled />
      <div class="form-hint">
        Se registra autom√°ticamente como la fecha actual
      </div>
    </div>

    <!-- Temperatura Target -->
    <div class="form-group">
      <label for="targetTemp">Temperatura Target (Opcional)</label>
      <div style="display: flex; gap: 0.5rem;">
        <input
          type="number"
          id="targetTemp"
          name="targetTemp"
          placeholder="Ej: 210"
          step="1"
          min="180"
          max="230"
          style="flex: 1;"
        />
        <div
          style="display: flex; align-items: center; padding: 0 0.75rem; background: #f5f5f5; border-radius: 0.375rem; border: 1px solid #e6e6e6; min-width: 60px;"
        >
          ¬∞C
        </div>
      </div>
      <div class="form-hint">
        Temperatura sugerida para el desarrollo del tueste
      </div>
    </div>

    <!-- Notas -->
    <div class="form-group">
      <label for="notes">Notas (Opcional)</label>
      <textarea
        id="notes"
        name="notes"
        placeholder="Ej: Tueste medio, desarrollo lento, buscar notas de chocolate..."
      ></textarea>
    </div>

    <!-- Resumen -->
    <div class="info-box" id="summaryBox" style="display: none;">
      <strong>Resumen del Env√≠o a Tosti√≥n:</strong>
      <div style="margin-top: 0.75rem; font-size: 0.95rem; line-height: 1.6;">
        <div>
          üì¶ Lote: <span id="summaryLot" style="font-weight: 600;">‚Äî</span>
        </div>
        <div>
          ‚öñÔ∏è Cantidad: <span id="summaryQuantity" style="font-weight: 600;"
            >‚Äî</span>
        </div>
        <div>
          üå°Ô∏è Temperatura: <span id="summaryTemp" style="font-weight: 600;"
            >‚Äî</span>
        </div>
        <div>
          üìÖ Fecha: <span id="summaryDate" style="font-weight: 600;">‚Äî</span>
        </div>
      </div>
    </div>

    <!-- Botones de Acci√≥n -->
    <div class="form-actions" style="margin-bottom: 2rem;">
      <button type="reset" class="btn-secondary">Limpiar</button>
      <button type="submit" class="btn-primary">Enviar a Tosti√≥n</button>
    </div>
  </form>

  <script>
    const lotSelect = document.getElementById("lotSelect");
    const roastingDate = document.getElementById("roastingDate");
    const form = document.getElementById("roastingForm");
    const summaryBox = document.getElementById("summaryBox");
    const lotInfoCard = document.getElementById("lotInfoCard");
    const quantityInput = document.getElementById("quantity");

    // Cargar lotes disponibles
    function loadAvailableLots() {
      const inventory = JSON.parse(localStorage.getItem("inventory") || "[]");
      const roasting = JSON.parse(localStorage.getItem("roasting") || "[]");

      // Filtrar: solo caf√© verde que no ha sido enviado a tosti√≥n completamente
      const available = inventory
        .filter((item) => item.type === "green_coffee")
        .filter((item) => {
          const roasted = roasting.filter(
            (r) => r.originalLotId === item.lotId
          );
          const totalRoasted = roasted.reduce(
            (sum, r) => sum + r.quantitySent,
            0
          );
          return item.weight > totalRoasted;
        });

      lotSelect.innerHTML = '<option value="">Selecciona un lote...</option>';
      available.forEach((item) => {
        const roasted = JSON.parse(localStorage.getItem("roasting") || "[]");
        const totalRoasted = roasted
          .filter((r) => r.originalLotId === item.lotId)
          .reduce((sum, r) => sum + r.quantitySent, 0);
        const remaining = item.weight - totalRoasted;

        const option = document.createElement("option");
        option.value = JSON.stringify(item);
        option.textContent = `${item.lotId} (${remaining.toFixed(1)} ${item.weightUnit} disponible)`;
        lotSelect.appendChild(option);
      });
    }

    // Establecer fecha actual
    const today = new Date().toISOString().split("T")[0];
    roastingDate.value = today;

    // Actualizar informaci√≥n del lote
    lotSelect.addEventListener("change", () => {
      if (!lotSelect.value) {
        lotInfoCard.style.display = "none";
        summaryBox.style.display = "none";
        return;
      }

      const item = JSON.parse(lotSelect.value);
      document.getElementById("lotId").textContent = item.lotId;
      document.getElementById("lotVariety").textContent = item.harvest.variety;
      document.getElementById("lotLocation").textContent = item.location;

      // Calcular peso disponible
      const roasting = JSON.parse(localStorage.getItem("roasting") || "[]");
      const totalRoasted = roasting
        .filter((r) => r.originalLotId === item.lotId)
        .reduce((sum, r) => sum + r.quantitySent, 0);
      const available = item.weight - totalRoasted;

      document.getElementById("lotAvailableWeight").textContent =
        `${available.toFixed(1)} ${item.weightUnit}`;
      document.getElementById("quantityHint").textContent =
        `M√°ximo disponible: ${available.toFixed(1)} ${item.weightUnit}`;

      quantityInput.max = available;
      lotInfoCard.style.display = "block";
      updateSummary();
    });

    // Actualizar resumen
    function updateSummary() {
      const quantity = parseFloat(quantityInput.value) || 0;
      const temp = document.getElementById("targetTemp").value || "‚Äî";
      const lotItem = lotSelect.value ? JSON.parse(lotSelect.value) : null;

      if (quantity > 0 && lotItem) {
        document.getElementById("summaryLot").textContent = lotItem.lotId;
        document.getElementById("summaryQuantity").textContent =
          `${quantity} ${lotItem.weightUnit}`;
        document.getElementById("summaryTemp").textContent =
          temp !== "‚Äî" ? `${temp}¬∞C` : "No especificada";
        document.getElementById("summaryDate").textContent = new Date(
          roastingDate.value
        ).toLocaleDateString("es-CO");
        summaryBox.style.display = "block";
      } else {
        summaryBox.style.display = "none";
      }
    }

    quantityInput.addEventListener("input", updateSummary);
    document
      .getElementById("targetTemp")
      .addEventListener("input", updateSummary);

    // Enviar formulario
    form.addEventListener("submit", (e) => {
      e.preventDefault();

      if (!lotSelect.value) {
        alert("‚ö†Ô∏è Debes seleccionar un lote");
        return;
      }

      const item = JSON.parse(lotSelect.value);
      const quantity = parseFloat(quantityInput.value);

      if (quantity <= 0) {
        alert("‚ö†Ô∏è La cantidad debe ser mayor a 0");
        return;
      }

      if (
        quantity >
        parseFloat(document.getElementById("lotAvailableWeight").textContent)
      ) {
        alert("‚ö†Ô∏è La cantidad excede el peso disponible");
        return;
      }

      const roastingRecord = {
        id: `ROAST-${Date.now()}`,
        originalLotId: item.lotId,
        quantitySent: quantity,
        weightUnit: item.weightUnit,
        targetTemp: document.getElementById("targetTemp").value || null,
        notes: document.getElementById("notes").value,
        sentDate: roastingDate.value,
        sentAt: new Date().toISOString(),
        status: "in_roasting",
        harvest: item.harvest,
      };

      // Guardar en localStorage
      const roasting = JSON.parse(localStorage.getItem("roasting") || "[]");
      roasting.push(roastingRecord);
      localStorage.setItem("roasting", JSON.stringify(roasting));

      alert(
        `‚úÖ Lote ${roastingRecord.originalLotId} enviado a tosti√≥n\n${quantity} ${item.weightUnit} en proceso`
      );

      form.reset();
      roastingDate.value = today;
      lotInfoCard.style.display = "none";
      summaryBox.style.display = "none";
      loadAvailableLots();
    });

    // Cargar lotes al iniciar
    loadAvailableLots();
  </script>
</MobileLayout>
