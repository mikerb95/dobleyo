---
import MobileLayout from "../../layouts/MobileLayout.astro";
---

<MobileLayout
  title="Almacenar Caf√© Tostado"
  description="Registra el caf√© tostado en el inventario con su ubicaci√≥n"
>
  <form id="roastedStorageForm">
    <!-- Selecci√≥n de Caf√© Tostado -->
    <div class="form-group">
      <label for="roastedSelect"
        >Caf√© Tostado para Almacenar <span class="required">*</span></label
      >
      <select id="roastedSelect" name="roasted" required>
        <option value="">Selecciona un caf√© tostado...</option>
      </select>
      <div class="form-hint">Caf√©s listos para almacenar</div>
    </div>

    <!-- Info del Caf√© Tostado -->
    <div class="card" id="roastedInfoCard" style="display: none;">
      <h3>Informaci√≥n del Caf√© Tostado</h3>
      <div
        style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; font-size: 0.95rem;"
      >
        <div>
          <div style="color: #666; font-size: 0.85rem;">Lote ID</div>
          <div style="font-weight: 600;" id="roastedLotId">‚Äî</div>
        </div>
        <div>
          <div style="color: #666; font-size: 0.85rem;">Variedad</div>
          <div style="font-weight: 600;" id="roastedVariety">‚Äî</div>
        </div>
        <div>
          <div style="color: #666; font-size: 0.85rem;">Peso Tostado</div>
          <div style="font-weight: 600; color: #c67b4e;" id="roastedWeight">
            ‚Äî
          </div>
        </div>
        <div>
          <div style="color: #666; font-size: 0.85rem;">Nivel de Tueste</div>
          <div style="font-weight: 600;" id="roastLevel">‚Äî</div>
        </div>
      </div>
    </div>

    <!-- Ubicaci√≥n en Bodega -->
    <div class="form-group">
      <label for="location"
        >Ubicaci√≥n en Bodega <span class="required">*</span></label
      >
      <select id="location" name="location" required>
        <option value="">Selecciona una ubicaci√≥n</option>
        <option value="ROASTED-A-01">Secci√≥n A - Estante 01 (Tostado)</option>
        <option value="ROASTED-A-02">Secci√≥n A - Estante 02 (Tostado)</option>
        <option value="ROASTED-B-01">Secci√≥n B - Estante 01 (Tostado)</option>
        <option value="ROASTED-B-02">Secci√≥n B - Estante 02 (Tostado)</option>
        <option value="CLIMATE-01">Almac√©n Climatizado 01 (Premium)</option>
        <option value="CLIMATE-02">Almac√©n Climatizado 02 (Premium)</option>
      </select>
      <div class="form-hint">Elige d√≥nde se almacenar√° el caf√© tostado</div>
    </div>

    <!-- Contenedor/Empaque -->
    <div class="form-group">
      <label for="container"
        >Tipo de Contenedor <span class="required">*</span></label
      >
      <select id="container" name="container" required>
        <option value="">Selecciona un contenedor</option>
        <option value="BAG-1KG">Bolsas de 1 kg (para empaque)</option>
        <option value="BAG-5KG">Bolsas de 5 kg (almacenamiento)</option>
        <option value="BUCKET-25">Cubeta de 25 kg</option>
        <option value="SACK-60">Saco de 60 kg</option>
      </select>
    </div>

    <!-- Cantidad de Contenedores -->
    <div class="form-group">
      <label for="containerCount"
        >Cantidad de Contenedores <span class="required">*</span></label
      >
      <input
        type="number"
        id="containerCount"
        name="containerCount"
        placeholder="Ej: 4"
        step="1"
        min="1"
        required
      />
      <div class="form-hint">¬øCu√°ntos contenedores se usar√°n?</div>
    </div>

    <!-- C√°lculo de Distribuci√≥n -->
    <div class="info-box" id="distributionBox" style="display: none;">
      <strong>Distribuci√≥n del Peso:</strong>
      <div style="margin-top: 0.75rem; font-size: 0.95rem;">
        <div>
          Total: <span id="distTotal" style="font-weight: 600;">‚Äî kg</span>
        </div>
        <div>
          Por Contenedor: <span id="distPerContainer" style="font-weight: 600;"
            >‚Äî kg</span
          >
        </div>
        <div>
          Contenedores: <span id="distContainers" style="font-weight: 600;"
            >‚Äî</span
          >
        </div>
      </div>
    </div>

    <!-- Fecha de Almacenamiento -->
    <div class="form-group">
      <label for="storageDate">Fecha de Almacenamiento</label>
      <input type="date" id="storageDate" name="storageDate" disabled />
      <div class="form-hint">
        Se registra autom√°ticamente como la fecha actual
      </div>
    </div>

    <!-- Condiciones de Almacenamiento -->
    <div class="form-group">
      <label>Condiciones de Almacenamiento</label>
      <div class="checkbox-group">
        <label class="checkbox-item">
          <input type="checkbox" name="conditions" value="sealed" />
          <span>Sellado herm√©ticas</span>
        </label>
        <label class="checkbox-item">
          <input type="checkbox" name="conditions" value="cool" />
          <span>Lugar fresco y seco</span>
        </label>
        <label class="checkbox-item">
          <input type="checkbox" name="conditions" value="dark" />
          <span>Protegido de luz directa</span>
        </label>
      </div>
    </div>

    <!-- Notas -->
    <div class="form-group">
      <label for="notes">Notas (Opcional)</label>
      <textarea
        id="notes"
        name="notes"
        placeholder="Ej: Almacenado en clima controlado, lotes separados por variedad..."
      ></textarea>
    </div>

    <!-- Resumen -->
    <div class="info-box" id="summaryBox" style="display: none;">
      <strong>Resumen del Almacenamiento Tostado:</strong>
      <div style="margin-top: 0.75rem; font-size: 0.95rem; line-height: 1.6;">
        <div>
          üì¶ Lote: <span id="summaryLot" style="font-weight: 600;">‚Äî</span>
        </div>
        <div>
          ‚öñÔ∏è Peso: <span id="summaryWeight" style="font-weight: 600;">‚Äî</span>
        </div>
        <div>
          üìç Ubicaci√≥n: <span id="summaryLocation" style="font-weight: 600;"
            >‚Äî</span
          >
        </div>
        <div>
          üè† Contenedores: <span
            id="summaryContainers"
            style="font-weight: 600;">‚Äî</span
          >
        </div>
        <div>
          üìÖ Fecha: <span id="summaryDate" style="font-weight: 600;">‚Äî</span>
        </div>
      </div>
    </div>

    <!-- Botones de Acci√≥n -->
    <div class="form-actions" style="margin-bottom: 2rem;">
      <button type="reset" class="btn-secondary">Limpiar</button>
      <button type="submit" class="btn-primary">Almacenar</button>
    </div>
  </form>

  <script>
    const roastedSelect = document.getElementById("roastedSelect");
    const storageDate = document.getElementById("storageDate");
    const form = document.getElementById("roastedStorageForm");
    const summaryBox = document.getElementById("summaryBox");
    const roastedInfoCard = document.getElementById("roastedInfoCard");
    const distributionBox = document.getElementById("distributionBox");
    const containerSelect = document.getElementById("container");
    const containerCountInput = document.getElementById("containerCount");

    let currentRoasted = null;

    const containerSizes = {
      "BAG-1KG": 1,
      "BAG-5KG": 5,
      "BUCKET-25": 25,
      "SACK-60": 60,
    };

    // Cargar caf√©s tostados listos desde API
    async function loadRoastedLots() {
      try {
        const response = await fetch("/api/coffee/roasted-coffee");
        if (!response.ok) throw new Error("Error al cargar caf√©s tostados");

        const roastedLots = await response.json();

        roastedSelect.innerHTML =
          '<option value="">Selecciona un caf√© tostado...</option>';
        roastedLots.forEach((record) => {
          const option = document.createElement("option");
          option.value = JSON.stringify(record);
          option.textContent = `${record.lot_id} - ${record.roast_level === "LIGHT" ? "Clara" : record.roast_level === "MEDIUM" ? "Media" : "Oscura"} (${record.weight_kg} kg)`;
          roastedSelect.appendChild(option);
        });
      } catch (error) {
        console.error("Error cargando caf√©s tostados:", error);
        alert("Error al cargar caf√©s tostados");
      }
    }

    // Establecer fecha actual
    const today = new Date().toISOString().split("T")[0];
    storageDate.value = today;

    // Actualizar informaci√≥n del caf√©
    roastedSelect.addEventListener("change", () => {
      if (!roastedSelect.value) {
        roastedInfoCard.style.display = "none";
        summaryBox.style.display = "none";
        return;
      }

      currentRoasted = JSON.parse(roastedSelect.value);
      document.getElementById("roastedLotId").textContent =
        currentRoasted.lot_id;
      document.getElementById("roastedVariety").textContent = "‚Äî";
      document.getElementById("roastedWeight").textContent =
        `${currentRoasted.weight_kg} kg`;
      document.getElementById("roastLevel").textContent =
        currentRoasted.roast_level === "LIGHT"
          ? "Clara"
          : currentRoasted.roast_level === "MEDIUM"
            ? "Media"
            : "Oscura";

      roastedInfoCard.style.display = "block";
      updateSummary();
    });

    // Calcular distribuci√≥n
    function updateDistribution() {
      if (
        !containerSelect.value ||
        !containerCountInput.value ||
        !currentRoasted
      ) {
        distributionBox.style.display = "none";
        return;
      }

      const containerSize = containerSizes[containerSelect.value];
      const count = parseInt(containerCountInput.value);
      const capacity = containerSize * count;

      if (capacity < currentRoasted.weight_kg) {
        alert("‚ö†Ô∏è La capacidad de los contenedores no es suficiente");
        distributionBox.style.display = "none";
        return;
      }

      document.getElementById("distTotal").textContent =
        `${currentRoasted.weight_kg} kg`;
      document.getElementById("distPerContainer").textContent =
        `${(currentRoasted.weight_kg / count).toFixed(2)} kg`;
      document.getElementById("distContainers").textContent =
        `${count} √ó ${containerSize} kg`;
      distributionBox.style.display = "block";
    }

    containerSelect.addEventListener("change", updateDistribution);
    containerCountInput.addEventListener("input", updateDistribution);

    // Actualizar resumen
    function updateSummary() {
      const location = document.getElementById("location").value;
      const container = document.getElementById("container").value;
      const count = containerCountInput.value;

      if (location && container && count && currentRoasted) {
        document.getElementById("summaryLot").textContent =
          currentRoasted.lot_id;
        document.getElementById("summaryWeight").textContent =
          `${currentRoasted.weight_kg} kg`;
        document.getElementById("summaryLocation").textContent = location;
        document.getElementById("summaryContainers").textContent =
          `${count} √ó ${containerSizes[container]} kg`;
        document.getElementById("summaryDate").textContent = new Date(
          storageDate.value
        ).toLocaleDateString("es-CO");
        summaryBox.style.display = "block";
      } else {
        summaryBox.style.display = "none";
      }
    }

    document
      .getElementById("location")
      .addEventListener("change", updateSummary);
    document
      .getElementById("container")
      .addEventListener("change", updateSummary);
    containerCountInput.addEventListener("input", updateSummary);

    // Enviar formulario a la API
    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      if (!currentRoasted) {
        alert("‚ö†Ô∏è Debes seleccionar un caf√© tostado");
        return;
      }

      const location = document.getElementById("location").value;
      const container = document.getElementById("container").value;
      const count = parseInt(containerCountInput.value);

      if (!location || !container || count <= 0) {
        alert("‚ö†Ô∏è Debes completar todos los campos requeridos");
        return;
      }

      const conditions = Array.from(
        document.querySelectorAll('input[name="conditions"]:checked')
      ).map((c) => c.value);

      const submitBtn = form.querySelector('button[type="submit"]');
      const originalText = submitBtn.textContent;
      submitBtn.disabled = true;
      submitBtn.textContent = "Registrando...";

      try {
        const response = await fetch("/api/coffee/roasted-storage", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            roastedId: currentRoasted.id,
            location: location,
            container: container,
            containerCount: count,
            conditions: conditions,
            notes: document.getElementById("notes").value,
          }),
        });

        if (!response.ok) {
          const error = await response.json();
          throw new Error(error.message || "Error al almacenar caf√©");
        }

        alert(
          `‚úÖ Caf√© tostado almacenado correctamente\n${currentRoasted.weight_kg} kg en ${location}`
        );

        form.reset();
        storageDate.value = today;
        roastedInfoCard.style.display = "none";
        summaryBox.style.display = "none";
        distributionBox.style.display = "none";
        loadRoastedLots();
      } catch (error) {
        console.error("Error:", error);
        alert(`‚ùå Error: ${error.message || "Error desconocido"}`);
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = originalText;
      }
    });

    // Cargar caf√©s al iniciar
    loadRoastedLots();
  </script>

  <style>
    .form-group {
      margin-bottom: 1.5rem;
    }

    label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 600;
      color: var(--coffee);
      font-size: 0.95rem;
    }

    .required {
      color: #c67b4e;
    }

    input[type="text"],
    input[type="number"],
    input[type="date"],
    select,
    textarea {
      width: 100%;
      padding: 0.875rem;
      border: 1px solid #e0e0e0;
      border-radius: 0.5rem;
      background: #fff;
      font-family: inherit;
      font-size: 1rem;
      color: var(--dark);
      transition: all 0.2s ease;
      box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
    }

    input:focus,
    select:focus,
    textarea:focus {
      outline: none;
      border-color: var(--accent);
      box-shadow: 0 0 0 3px rgba(198, 123, 78, 0.1);
    }

    .form-hint {
      margin-top: 0.35rem;
      font-size: 0.8rem;
      color: #888;
    }

    .checkbox-group {
      display: grid;
      gap: 0.75rem;
    }

    .checkbox-item {
      display: flex;
      align-items: center;
      padding: 0.875rem;
      border: 1px solid #e0e0e0;
      border-radius: 0.5rem;
      background: #fff;
      cursor: pointer;
      transition: all 0.2s;
      position: relative;
    }

    .checkbox-item:hover {
      border-color: #d0d0d0;
      background: #fafafa;
    }

    .checkbox-item:has(input:checked) {
      border-color: var(--accent);
      background: #fff8f3;
      color: var(--coffee);
    }

    .checkbox-item input {
      margin-right: 0.75rem;
      accent-color: var(--accent);
      width: 1.15rem;
      height: 1.15rem;
    }

    .card,
    .info-box {
      background: #fff;
      border: 1px solid #e6e6e6;
      border-radius: 0.75rem;
      padding: 1.25rem;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
      margin-bottom: 1.5rem;
    }

    .card h3 {
      font-family: "Playfair Display", serif;
      margin-top: 0;
      margin-bottom: 1rem;
      color: var(--coffee);
      font-size: 1.2rem;
      border-bottom: 1px solid #eee;
      padding-bottom: 0.5rem;
    }

    .info-box {
      background: #fffbf7;
      border: 1px solid #ebdace;
      border-left: 4px solid var(--accent);
    }

    .form-actions {
      display: flex;
      gap: 1rem;
      margin-top: 2rem;
      padding-top: 1rem;
      border-top: 1px solid #eee;
    }

    .btn-primary,
    .btn-secondary {
      flex: 1;
      padding: 0.9rem;
      border: none;
      border-radius: 0.5rem;
      font-family: inherit;
      font-weight: 600;
      font-size: 1rem;
      cursor: pointer;
      transition: all 0.2s;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .btn-primary {
      background: var(--coffee);
      color: #fff;
      box-shadow: 0 4px 6px -1px rgba(37, 26, 20, 0.2);
    }

    .btn-primary:hover {
      background: #3a2a22;
      transform: translateY(-1px);
      box-shadow: 0 6px 8px -1px rgba(37, 26, 20, 0.3);
    }

    .btn-primary:active {
      transform: translateY(0);
    }

    .btn-secondary {
      background: #fff;
      border: 1px solid #d1d1d1;
      color: #666;
    }

    .btn-secondary:hover {
      background: #f5f5f5;
      color: #333;
      border-color: #bbb;
    }
    
    /* Ajustes para selects */
    select {
      appearance: none;
      background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
      background-repeat: no-repeat;
      background-position: right 0.75rem center;
      background-size: 1em;
      padding-right: 2.5rem;
    }
  </style>
</MobileLayout>
