---
import MobileLayout from "../../layouts/MobileLayout.astro";
---

<MobileLayout title="Almacenar Caf√© Tostado" description="Registra el caf√© tostado en el inventario con su ubicaci√≥n">
  <form id="roastedStorageForm">
    <!-- Selecci√≥n de Caf√© Tostado -->
    <div class="form-group">
      <label for="roastedSelect">Caf√© Tostado para Almacenar <span class="required">*</span></label>
      <select id="roastedSelect" name="roasted" required>
        <option value="">Selecciona un caf√© tostado...</option>
      </select>
      <div class="form-hint">Caf√©s listos para almacenar</div>
    </div>

    <!-- Info del Caf√© Tostado -->
    <div class="card" id="roastedInfoCard" style="display: none;">
      <h3>Informaci√≥n del Caf√© Tostado</h3>
      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; font-size: 0.95rem;">
        <div>
          <div style="color: #666; font-size: 0.85rem;">Lote ID</div>
          <div style="font-weight: 600;" id="roastedLotId">‚Äî</div>
        </div>
        <div>
          <div style="color: #666; font-size: 0.85rem;">Variedad</div>
          <div style="font-weight: 600;" id="roastedVariety">‚Äî</div>
        </div>
        <div>
          <div style="color: #666; font-size: 0.85rem;">Peso Tostado</div>
          <div style="font-weight: 600; color: #c67b4e;" id="roastedWeight">‚Äî</div>
        </div>
        <div>
          <div style="color: #666; font-size: 0.85rem;">Nivel de Tueste</div>
          <div style="font-weight: 600;" id="roastLevel">‚Äî</div>
        </div>
      </div>
    </div>

    <!-- Ubicaci√≥n en Bodega -->
    <div class="form-group">
      <label for="location">Ubicaci√≥n en Bodega <span class="required">*</span></label>
      <select id="location" name="location" required>
        <option value="">Selecciona una ubicaci√≥n</option>
        <option value="ROASTED-A-01">Secci√≥n A - Estante 01 (Tostado)</option>
        <option value="ROASTED-A-02">Secci√≥n A - Estante 02 (Tostado)</option>
        <option value="ROASTED-B-01">Secci√≥n B - Estante 01 (Tostado)</option>
        <option value="ROASTED-B-02">Secci√≥n B - Estante 02 (Tostado)</option>
        <option value="CLIMATE-01">Almac√©n Climatizado 01 (Premium)</option>
        <option value="CLIMATE-02">Almac√©n Climatizado 02 (Premium)</option>
      </select>
      <div class="form-hint">Elige d√≥nde se almacenar√° el caf√© tostado</div>
    </div>

    <!-- Contenedor/Empaque -->
    <div class="form-group">
      <label for="container">Tipo de Contenedor <span class="required">*</span></label>
      <select id="container" name="container" required>
        <option value="">Selecciona un contenedor</option>
        <option value="BAG-1KG">Bolsas de 1 kg (para empaque)</option>
        <option value="BAG-5KG">Bolsas de 5 kg (almacenamiento)</option>
        <option value="BUCKET-25">Cubeta de 25 kg</option>
        <option value="SACK-60">Saco de 60 kg</option>
      </select>
    </div>

    <!-- Cantidad de Contenedores -->
    <div class="form-group">
      <label for="containerCount">Cantidad de Contenedores <span class="required">*</span></label>
      <input
        type="number"
        id="containerCount"
        name="containerCount"
        placeholder="Ej: 4"
        step="1"
        min="1"
        required
      />
      <div class="form-hint">¬øCu√°ntos contenedores se usar√°n?</div>
    </div>

    <!-- C√°lculo de Distribuci√≥n -->
    <div class="info-box" id="distributionBox" style="display: none;">
      <strong>Distribuci√≥n del Peso:</strong>
      <div style="margin-top: 0.75rem; font-size: 0.95rem;">
        <div>Total: <span id="distTotal" style="font-weight: 600;">‚Äî kg</span></div>
        <div>Por Contenedor: <span id="distPerContainer" style="font-weight: 600;">‚Äî kg</span></div>
        <div>Contenedores: <span id="distContainers" style="font-weight: 600;">‚Äî</span></div>
      </div>
    </div>

    <!-- Fecha de Almacenamiento -->
    <div class="form-group">
      <label for="storageDate">Fecha de Almacenamiento</label>
      <input type="date" id="storageDate" name="storageDate" disabled />
      <div class="form-hint">Se registra autom√°ticamente como la fecha actual</div>
    </div>

    <!-- Condiciones de Almacenamiento -->
    <div class="form-group">
      <label>Condiciones de Almacenamiento</label>
      <div class="checkbox-group">
        <label class="checkbox-item">
          <input type="checkbox" name="conditions" value="sealed" />
          <span>Sellado herm√©ticas</span>
        </label>
        <label class="checkbox-item">
          <input type="checkbox" name="conditions" value="cool" />
          <span>Lugar fresco y seco</span>
        </label>
        <label class="checkbox-item">
          <input type="checkbox" name="conditions" value="dark" />
          <span>Protegido de luz directa</span>
        </label>
      </div>
    </div>

    <!-- Notas -->
    <div class="form-group">
      <label for="notes">Notas (Opcional)</label>
      <textarea
        id="notes"
        name="notes"
        placeholder="Ej: Almacenado en clima controlado, lotes separados por variedad..."
      ></textarea>
    </div>

    <!-- Resumen -->
    <div class="info-box" id="summaryBox" style="display: none;">
      <strong>Resumen del Almacenamiento Tostado:</strong>
      <div style="margin-top: 0.75rem; font-size: 0.95rem; line-height: 1.6;">
        <div>üì¶ Lote: <span id="summaryLot" style="font-weight: 600;">‚Äî</span></div>
        <div>‚öñÔ∏è Peso: <span id="summaryWeight" style="font-weight: 600;">‚Äî</span></div>
        <div>üìç Ubicaci√≥n: <span id="summaryLocation" style="font-weight: 600;">‚Äî</span></div>
        <div>üè† Contenedores: <span id="summaryContainers" style="font-weight: 600;">‚Äî</span></div>
        <div>üìÖ Fecha: <span id="summaryDate" style="font-weight: 600;">‚Äî</span></div>
      </div>
    </div>

    <!-- Botones de Acci√≥n -->
    <div class="form-actions" style="margin-bottom: 2rem;">
      <button type="reset" class="btn-secondary">Limpiar</button>
      <button type="submit" class="btn-primary">Almacenar</button>
    </div>
  </form>

  <script>
    const roastedSelect = document.getElementById("roastedSelect");
    const storageDate = document.getElementById("storageDate");
    const form = document.getElementById("roastedStorageForm");
    const summaryBox = document.getElementById("summaryBox");
    const roastedInfoCard = document.getElementById("roastedInfoCard");
    const distributionBox = document.getElementById("distributionBox");
    const containerSelect = document.getElementById("container");
    const containerCountInput = document.getElementById("containerCount");

    let currentRoasted = null;

    const containerSizes = {
      "BAG-1KG": 1,
      "BAG-5KG": 5,
      "BUCKET-25": 25,
      "SACK-60": 60,
    };

    // Cargar caf√©s tostados listos
    function loadRoastedLots() {
      const roasted = JSON.parse(localStorage.getItem("roasted") || "[]");
      const stored = JSON.parse(localStorage.getItem("roasted_inventory") || "[]");
      const storedIds = stored.map((item) => item.roastingRecordId);

      const available = roasted.filter((r) => !storedIds.includes(r.roastingRecordId));

      roastedSelect.innerHTML = '<option value="">Selecciona un caf√© tostado...</option>';
      available.forEach((record) => {
        const option = document.createElement("option");
        option.value = JSON.stringify(record);
        option.textContent = `${record.originalLotId} - ${record.roastLevel === "LIGHT" ? "Clara" : record.roastLevel === "MEDIUM" ? "Media" : "Oscura"} (${record.quantityRoasted} kg)`;
        roastedSelect.appendChild(option);
      });
    }

    // Establecer fecha actual
    const today = new Date().toISOString().split("T")[0];
    storageDate.value = today;

    // Actualizar informaci√≥n del caf√©
    roastedSelect.addEventListener("change", () => {
      if (!roastedSelect.value) {
        roastedInfoCard.style.display = "none";
        summaryBox.style.display = "none";
        return;
      }

      currentRoasted = JSON.parse(roastedSelect.value);
      document.getElementById("roastedLotId").textContent = currentRoasted.originalLotId;
      document.getElementById("roastedVariety").textContent = currentRoasted.harvest.variety;
      document.getElementById("roastedWeight").textContent = `${currentRoasted.quantityRoasted} kg`;
      document.getElementById("roastLevel").textContent = currentRoasted.roastLevel === "LIGHT" ? "Clara" : currentRoasted.roastLevel === "MEDIUM" ? "Media" : "Oscura";

      roastedInfoCard.style.display = "block";
      updateSummary();
    });

    // Calcular distribuci√≥n
    function updateDistribution() {
      if (!containerSelect.value || !containerCountInput.value || !currentRoasted) {
        distributionBox.style.display = "none";
        return;
      }

      const containerSize = containerSizes[containerSelect.value];
      const count = parseInt(containerCountInput.value);
      const capacity = containerSize * count;

      if (capacity < currentRoasted.quantityRoasted) {
        alert("‚ö†Ô∏è La capacidad de los contenedores no es suficiente");
        distributionBox.style.display = "none";
        return;
      }

      document.getElementById("distTotal").textContent = `${currentRoasted.quantityRoasted} kg`;
      document.getElementById("distPerContainer").textContent = `${(currentRoasted.quantityRoasted / count).toFixed(2)} kg`;
      document.getElementById("distContainers").textContent = `${count} √ó ${containerSize} kg`;
      distributionBox.style.display = "block";
    }

    containerSelect.addEventListener("change", updateDistribution);
    containerCountInput.addEventListener("input", updateDistribution);

    // Actualizar resumen
    function updateSummary() {
      const location = document.getElementById("location").value;
      const container = document.getElementById("container").value;
      const count = containerCountInput.value;

      if (location && container && count && currentRoasted) {
        document.getElementById("summaryLot").textContent = currentRoasted.originalLotId;
        document.getElementById("summaryWeight").textContent = `${currentRoasted.quantityRoasted} kg`;
        document.getElementById("summaryLocation").textContent = location;
        document.getElementById("summaryContainers").textContent = `${count} √ó ${containerSizes[container]} kg`;
        document.getElementById("summaryDate").textContent = new Date(storageDate.value).toLocaleDateString("es-CO");
        summaryBox.style.display = "block";
      } else {
        summaryBox.style.display = "none";
      }
    }

    document.getElementById("location").addEventListener("change", updateSummary);
    document.getElementById("container").addEventListener("change", updateSummary);
    containerCountInput.addEventListener("input", updateSummary);

    // Enviar formulario
    form.addEventListener("submit", (e) => {
      e.preventDefault();

      if (!currentRoasted) {
        alert("‚ö†Ô∏è Debes seleccionar un caf√© tostado");
        return;
      }

      const location = document.getElementById("location").value;
      const container = document.getElementById("container").value;
      const count = parseInt(containerCountInput.value);

      if (!location || !container || count <= 0) {
        alert("‚ö†Ô∏è Debes completar todos los campos requeridos");
        return;
      }

      const conditions = Array.from(document.querySelectorAll('input[name="conditions"]:checked')).map((c) => c.value);

      const storageRecord = {
        id: `ROASTED-STORAGE-${Date.now()}`,
        roastingRecordId: currentRoasted.roastingRecordId,
        originalLotId: currentRoasted.originalLotId,
        quantityRoasted: currentRoasted.quantityRoasted,
        roastLevel: currentRoasted.roastLevel,
        location: location,
        container: container,
        containerCount: count,
        conditions: conditions,
        storageDate: storageDate.value,
        notes: document.getElementById("notes").value,
        storedAt: new Date().toISOString(),
        status: "ready_for_packaging",
        harvest: currentRoasted.harvest,
      };

      // Guardar en localStorage
      const inventory = JSON.parse(localStorage.getItem("roasted_inventory") || "[]");
      inventory.push(storageRecord);
      localStorage.setItem("roasted_inventory", JSON.stringify(inventory));

      alert(`‚úÖ Caf√© tostado almacenado correctamente\n${storageRecord.quantityRoasted} kg en ${storageRecord.location}`);

      form.reset();
      storageDate.value = today;
      roastedInfoCard.style.display = "none";
      summaryBox.style.display = "none";
      distributionBox.style.display = "none";
      loadRoastedLots();
    });

    // Cargar caf√©s al iniciar
    loadRoastedLots();
  </script>
</MobileLayout>
