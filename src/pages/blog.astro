---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section class="prose">
    <h1>Blog</h1>
    <p>Novedades, recetas y notas de origen.</p>
    <div class="grid" id="blogGrid">
      <article class="card">
        <img
          src="https://images.unsplash.com/photo-1498804103079-a6351b050096?q=80&w=1200&auto=format&fit=crop"
          alt="Receta V60 Basica"
        />
        <div class="p">
          <h3>Receta V60 básica</h3>
          <div class="muted">Tiempo de lectura: 3 min</div>
        </div>
      </article>
      <article class="card">
        <img
          src="https://images.unsplash.com/photo-1517705008128-361805f42e86?q=80&w=1200&auto=format&fit=crop"
          alt="Notas de cata Huila"
        />
        <div class="p">
          <h3>Notas de cata: Huila</h3>
          <div class="muted">Tiempo de lectura: 4 min</div>
        </div>
      </article>
      <article class="card">
        <img
          src="https://images.unsplash.com/photo-1470337458703-46ad1756a187?q=80&w=1200&auto=format&fit=crop"
          alt="Guia de molienda"
        />
        <div class="p">
          <h3>Guía de molienda por método</h3>
          <div class="muted">Tiempo de lectura: 5 min</div>
        </div>
      </article>
    </div>
  </section>
  <script src="/assets/js/blog.js" is:inline></script>
</Layout>
